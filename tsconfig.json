{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "outDir": "./dist",
    "sourceRoot": "src",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": "./src",
    "paths": {
      "*": ["src/types/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src/**/*"]
}
